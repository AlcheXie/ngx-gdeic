{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": ".aot",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "removeComments": false,
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "genDir": ".",
    "skipMetadataEmit": true
  },
  "files": [
    "index.ts"
  ],
  "exclude": [
    ".vscode",
    "src",
    "node_modules",
    "bower_components",
    "typings"
  ]
}
